@model BaiTapWeb.Models.Order
@{
    ViewData["Title"] = "DetailOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var customer = ViewBag.customer;
    var products = ViewBag.products;
}

<section class="content-main">

    <div class="content-header">
      <h2 class="content-title">Order detail</h2>
    </div>


        <div class="card">
          <header class="card-header">
            <div class="row align-items-center">
              <div class="col-lg-6 col-md-6">
                <span>
                  <i class="material-icons md-calendar_today"></i> <b>@Model.Date</b>
                </span> <br>
              </div>
             
            </div>
          </header> <!-- card-header end// -->
          <div class="card-body">

            <div class="row mb-5 order-info-wrap">
              <div class="col-md-12">
                <article class="icontext align-items-start">
                  <span class="icon icon-sm rounded-circle bg-primary-light">
                    <i class="text-primary material-icons md-person"></i>
                  </span>
                  <div class="text">
                    <p class="mb-1">
                     code: @customer.Code <br> Name: @customer.Name
                    </p>
                  </div>
                </article>
              </div> <!-- col// -->
              
            </div> <!-- row // -->

            <div class="row">
              <div class="col-lg-12">
                <div class="table-responsive">
                <table class="table border table-hover table-lg">
                  <thead>
                    <tr>
                      <th width="20%">Code</th>
                      <th width="10%">Name</th>
                      <th width="20%">Price</th>
                      <th width="10%">Quantity</th>
                      <th width="20%">Total</th>
                      <th width="40%" class="text-end">Description</th>
                    </tr>
                  </thead>
                  <tbody>
                   
                    @foreach (var item in products)
                      {
                         <tr>
                      <td>
                       @item.p.Code
                      </td>
                      <td> @item.p.Name </td>
                      <td>@String.Format("{0:0,0 đ}",item.p.Price)  </td>
                       <td> @item.o.Qty </td>
                       <td> @String.Format("{0:0,0 đ}",item.o.Total) </td>

                      <td class="text-end"> @item.o.Description </td>
                    </tr>  
                      }
                  </tbody>
                </table>
                </div> <!-- table-responsive// -->
              </div>  <!-- col// -->
           

            </div>
          </div> <!-- card-body end// -->
        </div> <!-- card end// -->



  </section> <!-- content-main end// -->

 